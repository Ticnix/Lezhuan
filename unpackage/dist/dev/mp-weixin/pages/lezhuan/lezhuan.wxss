
/* 主容器样式 - 实现全屏居中 */
.parent-container.data-v-4dd96cc0 .target-view {
  padding-top: 50rpx;
}
.container.data-v-4dd96cc0 {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff8e6;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden; /* 防止背景装饰元素超出容器 */
}

/* 背景装饰元素 */
.bg-decoration.data-v-4dd96cc0 {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffd70033, #ffb80022);
  z-index: 0;
}
.top-left.data-v-4dd96cc0 {
  top: -100rpx;
  left: -100rpx;
  animation: floatTopLeft-4dd96cc0 20s infinite alternate ease-in-out; /* 左上角圆圈动画 */
}
.bottom-right.data-v-4dd96cc0 {
  bottom: -100rpx;
  right: -100rpx;
  animation: floatBottomRight-4dd96cc0 18s infinite alternate ease-in-out; /* 右下角圆圈动画 */
}

/* 左上角圆圈游动动画 */
@keyframes floatTopLeft-4dd96cc0 {
0% {
    transform: translate(0, 0) scale(1);
    opacity: 0.7;
}
25% {
    transform: translate(100rpx, 100rpx) scale(1.1);
    opacity: 0.8;
}
50% {
    transform: translate(200rpx, 50rpx) scale(0.9);
    opacity: 0.75;
}
75% {
    transform: translate(150rpx, 150rpx) scale(1.05);
    opacity: 0.85;
}
100% {
    transform: translate(250rpx, 100rpx) scale(1);
    opacity: 0.7;
}
}

/* 右下角圆圈游动动画 */
@keyframes floatBottomRight-4dd96cc0 {
0% {
    transform: translate(0, 0) scale(1);
    opacity: 0.7;
}
25% {
    transform: translate(-150rpx, -50rpx) scale(0.95);
    opacity: 0.8;
}
50% {
    transform: translate(-100rpx, -150rpx) scale(1.1);
    opacity: 0.75;
}
75% {
    transform: translate(-200rpx, -100rpx) scale(0.9);
    opacity: 0.85;
}
100% {
    transform: translate(-150rpx, -50rpx) scale(1);
    opacity: 0.7;
}
}

