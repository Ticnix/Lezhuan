  display: inline-block;
  white-space: nowrap;
  padding-left: 100%;
  animation: marquee-1cf27b2a 16s linear infinite;
  color: #333333;
  font-size: 26rpx;
  line-height: 40rpx;
}
@keyframes marquee-1cf27b2a {
0% { transform: translateX(0);
}
100% { transform: translateX(-100%);
}
}

